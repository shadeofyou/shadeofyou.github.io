---
import { Image } from "astro:assets";

interface Props {
  title: string;
  description: string;
  src: ImageMetadata;
  href: string;
}

const { title, description, src, href } = Astro.props;
---

<a href={href} target="_blank" class="bg-gray-600 rounded-md overflow-hidden">
  <div class="">
    <Image src={src} alt={title} class="aspect-video object-cover w-full" />
  </div>
  <div class="p-4">
    <h3 class="text-2xl mb-4">{title}</h3>
    <p>{description}</p>
  </div>
</a>
