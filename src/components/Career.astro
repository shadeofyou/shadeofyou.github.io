---
interface Props {
  color: string;
  name: string;
  date: string;
}

const { color, name, date } = Astro.props;
---

<div class="flex gap-4 items-center">
  <div class:list={["rounded-full p-1.5 text-white", color]}>
    <slot name="icon" />
  </div>
  <div>
    <div class="text-sm">{date}</div>
    <div>{name}</div>
  </div>
</div>
